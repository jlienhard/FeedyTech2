{% extends 'base.html.twig' %}

{% block title %}Sites{% endblock %}

{% block body %}
    <h1>Sites</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ site.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ site.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ site.description }}</td>
            </tr>
            <tr>
                <th>Source_url</th>
                <td>{{ site.sourceUrl }}</td>
            </tr>
            <tr>
                <th>Rss_url</th>
                <td>{{ site.rssUrl }}</td>
            </tr>
            <tr>
                <th>Icon_url</th>
                <td>{{ site.iconUrl }}</td>
            </tr>
            <tr>
                <th>Creates_at</th>
                <td>{{ site.createsAt ? site.createsAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Update_at</th>
                <td>{{ site.updateAt ? site.updateAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_sites_index') }}">back to list</a>

    <a href="{{ path('admin_sites_edit', {'id': site.id}) }}">edit</a>

    {{ include('admin/sites/_delete_form.html.twig') }}
{% endblock %}
